<?xml version="1.0"?>
<project name="Juego" default="compile">
    <target name="clean" description="borrar archivos temporales">
        <delete dir="classes"/>
    </target>
    <target name="clobber" depends="clean" description="eliminar todos los archivos Juego">
        <delete file="juego.jar"/>
    </target>
    <target name="compile" description="compilar el código java a un archivo class">
        <mkdir dir="classes"/>
        <javac srcdir="." destdir="classes"/>
    </target>
    <target name="jar" depends="compile" description="crear un archivo Jar para la aplicación">
        <jar destfile="juego.jar">
            <fileset dir="classes" includes="**.class"/>
            <manifest>
                <attribute name="Main-Class" value="Juego"/>
            </manifest>
        </jar>
    </target>
</project>

